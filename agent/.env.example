# ================================================================
# CashCat Agent â€” Environment Variables
# ================================================================
# Defaults are defined in agent/src/config.ts.
# Only override values you want to change.

# === Logging ===
LOG_LEVEL=info

# === Scan Interval ===
# Seconds between each cycle (default: 90)
# SCAN_INTERVAL_SECONDS=90

# === Jupiter API ===
# JUPITER_API_BASE_URL=https://lite-api.jup.ag

# === wallet-mcp ===
# RUNTIME_WALLET_MCP_ENABLED=true
# RUNTIME_WALLET_MCP_COMMAND=pnpm --filter wallet-mcp start
# RUNTIME_WALLET_MCP_CWD=
# RUNTIME_WALLET_MCP_TIMEOUT_SECONDS=45

# === Safety ===
# RUNTIME_KILL_SWITCH=false
# RUNTIME_MAX_SLIPPAGE_BPS=300

# === Risk Management ===
# RUNTIME_AGENTIC_STOP_LOSS_PCT=-0.10
# RUNTIME_AGENTIC_TAKE_PROFIT_PCT=0.15
# RUNTIME_AGENTIC_MAX_HOLD_MINUTES=480
# Seconds between stop-loss/take-profit checks (default: 10, min: 5)
# RUNTIME_AGENTIC_STOP_LOSS_INTERVAL_SECONDS=10
# RUNTIME_AGENTIC_MAX_OPEN_POSITIONS=5

# === Trade Sizing ===
# RUNTIME_AGENTIC_MIN_TRADE_SOL=0.1
# RUNTIME_AGENTIC_SELL_FRACTION=1

# === Intent Throttling ===
# RUNTIME_AGENTIC_INTENT_SLIPPAGE_BPS=100
# RUNTIME_AGENTIC_MIN_INTENT_GAP_SECONDS=30
# RUNTIME_AGENTIC_MAX_INTENTS_PER_CYCLE=4

# === State ===
# Persistent path for state (default: /tmp/cashcat-runtime/agentic-state/state.json)
# RUNTIME_AGENTIC_STATE_PATH=

# === Initial Cash ===
# Fallback if wallet balance cannot be fetched on first run (default: 10 SOL)
# RUNTIME_AGENTIC_INITIAL_CASH_SOL=10

# === Codex ===
# Timeout for codex exec in seconds (default: 120)
# RUNTIME_AGENTIC_CODEX_TIMEOUT_SECONDS=120

# === Dashboard ===
DASHBOARD_PORT=8787

# === Ledger (wallet-mcp) ===
# WALLET_MCP_LEDGER_PATH=
