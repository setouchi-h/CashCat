# ================================================================
# CashCat Agent â€” Minimal Environment Variables
# ================================================================
# Most runtime parameters are fixed in code defaults (`agent/src/config/index.ts`).
# Put only values you actually want to override in this file.

# === AI Planner ===
# API key auth:
# For plannerMode=llm it is required unless OAuth login tokens are available.
# For plannerMode=hybrid it is optional (falls back to rule planner when missing).
# If API key is empty, agent uses Codex OAuth via `codex exec`.
OPENAI_API_KEY=
# Optional alias if you prefer to separate keys:
# RUNTIME_AGENTIC_LLM_API_KEY=

# === Trading Mode ===
# true = paper trading (default), false = live trading
PAPER_TRADE=true

# === Live Trading Only ===
# Optional but recommended for stable RPC
HELIUS_API_KEY=

# === Optional API Override ===
# Optional Jupiter premium key
JUPITER_API_KEY=

# === Optional Planner Mode ===
# rule | llm | hybrid (default: hybrid)
RUNTIME_AGENTIC_PLANNER_MODE=hybrid

# === Logging ===
LOG_LEVEL=info

# === Dashboard (optional) ===
# Used by `pnpm dev:ui`
DASHBOARD_PORT=8787
